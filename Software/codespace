answer = random.randint(1,1000)
tries = 0
guess = int(input('Guess the number between 1-1000: '))
while tries <= 10:
    tries+=1
    max_guess = 0
    min_guess = 1000
    if max_guess <= guess:
        max_guess = guess
    elif min_guess > guess:
        min_guess = guess
    print('The number is between', min_guess, 'and', max_guess '!')
    if guess = answer:
        print('You win!')
        break

print('You lose!')